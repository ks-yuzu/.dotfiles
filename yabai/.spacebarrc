#!/usr/bin/env bash

~/bin/spacebar -m config position             top
~/bin/spacebar -m config height               26
~/bin/spacebar -m config title                on
~/bin/spacebar -m config spaces               on
~/bin/spacebar -m config clock                on
~/bin/spacebar -m config power                on
~/bin/spacebar -m config padding_left         20
~/bin/spacebar -m config padding_right        20
~/bin/spacebar -m config spacing_left         25
~/bin/spacebar -m config spacing_right        15
~/bin/spacebar -m config text_font            "Helvetica Neue:Bold:12.0"
# spacebar -m config icon_font            "Font Awesome 5 Free:Solid:12.0"
~/bin/spacebar -m config icon_font            "FontAwesome:Regular:12.0"
~/bin/spacebar -m config background_color     0xff202020
~/bin/spacebar -m config foreground_color     0xffa8a8a8
~/bin/spacebar -m config space_icon_color     0xff458588
~/bin/spacebar -m config power_icon_color     0xffcd950c
~/bin/spacebar -m config battery_icon_color   0xffd75f5f
~/bin/spacebar -m config dnd_icon_color       0xffa8a8a8
~/bin/spacebar -m config clock_icon_color     0xffa8a8a8
~/bin/spacebar -m config space_icon_strip     I II III IV V VI VII VIII IX X
~/bin/spacebar -m config power_icon_strip      
~/bin/spacebar -m config space_icon           
~/bin/spacebar -m config clock_icon           
~/bin/spacebar -m config dnd_icon             
~/bin/spacebar -m config clock_format         "%Y/%m/%d %R"
~/bin/spacebar -m config right_shell          on
# spacebar -m config right_shell_icon     
~/bin/spacebar -m config right_shell_command  "whoami"

echo "spacebar configuration loaded.."
